<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ExerciseInformationActivity">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:id="@+id/exercise_img"
        android:layout_centerHorizontal="true"
        />
    <TextView
    android:layout_marginTop="30sp"
    android:layout_below="@+id/exercise_img"
    android:id="@+id/exercise_name"
    android:layout_width="350dp"
    android:gravity="center"
    android:layout_height="40dp"
    android:text="운동이름"
    android:textColor="#2354ac"
    android:typeface="serif"
    android:textStyle="bold"
    android:textSize="25sp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/back_recipe_detail"
    />
    <TextView
        android:layout_marginTop="30sp"
        android:layout_below="@+id/exercise_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="운동 설명"
        android:textColor="#212c4d"

        android:background="@drawable/back_recipe_detail"
        android:id="@+id/exercise_explain"
        android:textSize="20sp"

        />

    <VideoView
        android:layout_marginTop="50dp"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/exercise_video"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/exercise_explain"

        />


    
    
    
    
    
    
    
    

</RelativeLayout>