<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DiaryRegisterActivity"
    android:orientation="vertical"
    android:background="#ffffffff">
<ImageView
    android:padding="10dp"
    android:layout_width="200dp"
    android:layout_height="150dp"
    android:background="@drawable/back"

    android:layout_marginTop="30dp"
    android:layout_marginLeft="30dp"
    android:id="@+id/exe_img1"
    android:scaleType="fitXY"
    />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:text="운동 시작 시간"
        android:id="@+id/exe_start"
        android:textSize="18dp"/>
    <EditText
        android:id="@+id/h1s"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:layout_toLeftOf="@+id/h1t"
        android:hint="00"
        />
    <TextView
        android:id="@+id/h1t"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:text="시"
        android:textSize="20dp"
        android:layout_toLeftOf="@+id/m1s"/>
    <EditText
        android:id="@+id/m1s"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:layout_toLeftOf="@+id/m1t"
        android:hint="00"/>
    <TextView
        android:id="@+id/m1t"
        android:layout_marginTop="5dp"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:text="분"
        android:textSize="20dp"
        android:layout_toLeftOf="@+id/hm1"
        android:layout_marginRight="10dp"
        />
    <Button
        android:id="@+id/hm1"
        android:layout_width="50dp"
        android:layout_height="40dp"

        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:text="입력"
        android:background="@drawable/round"/>
</RelativeLayout>
   <ImageView
       android:padding="10dp"
       android:layout_width="200dp"
       android:layout_height="150dp"
       android:background="@drawable/back"
       android:layout_marginTop="30dp"
       android:layout_marginLeft="30dp"
       android:id="@+id/exe_img2"
       android:scaleType="fitXY"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:text="운동 끝 시간"
        android:id="@+id/exe_finish"
        android:textSize="18dp"/>
        <EditText
            android:id="@+id/h2s"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:layout_toLeftOf="@+id/h2t"
            android:hint="00"
            />
        <TextView
            android:id="@+id/h2t"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="시"
            android:textSize="20dp"
            android:layout_toLeftOf="@+id/m2s"/>
        <EditText
            android:id="@+id/m2s"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:layout_toLeftOf="@+id/m2t"
            android:hint="00"/>
        <TextView
            android:id="@+id/m2t"
            android:layout_marginTop="5dp"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:text="분"
            android:textSize="20dp"
            android:layout_toLeftOf="@+id/hm2"
            android:layout_marginRight="10dp"
            />
        <Button
            android:id="@+id/hm2"
            android:layout_width="50dp"
            android:layout_height="40dp"

            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:text="입력"
            android:background="@drawable/round"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="18dp"
        android:text="운동 시간"
        android:id="@+id/exe_total_time"
        android:textSize="18dp"/>
        <Button
            android:id="@+id/timecalc"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:text="시간 계산"
            android:textSize="15dp"
            android:background="@drawable/round"/>

    </RelativeLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"

        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="운동이름"/>

        <Spinner
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:id="@+id/exe_name_spinner"
            android:gravity="center"
            />
        <EditText
            android:layout_marginLeft="5dp"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:id="@+id/exe_name"
            android:hint=""/>




    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"

        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="운동시간(분)"/>
        <EditText
            android:id="@+id/exe_time"
            android:layout_marginLeft="5dp"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:hint=""/>

        <Button
            android:id="@+id/exe_clac"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:text="입력"
            android:background="@drawable/round"
            android:textSize="10dp"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:text=""
        android:id="@+id/exe_memo"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:text="소모 칼로리 : "
        android:id="@+id/exe_kcal"
        android:textSize="20dp"/>
    <Button
        android:layout_marginTop="15dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:text="등록"
        android:background="@drawable/round"
        android:id="@+id/registbutton"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>