<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HealthActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"

    >

    <Button
        android:layout_marginTop="160dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="웨이트 트레이닝"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/round"
        android:id="@+id/weighttraining_btn"
        />
    <Button
        android:background="@drawable/round"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="유산소 운동"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/cardio_btn"
        />
    <Button
        android:background="@drawable/round"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="운동 다이어리"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/weight_diary_btn"
        />
    <Button
        android:background="@drawable/round"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="나의 몸 변천사"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/body_history_btn"
        />





</LinearLayout>